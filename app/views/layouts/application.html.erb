<!DOCTYPE html>
<html>
  <head>
    <title>Moditter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <nav class="bg-blue-300 h-5 w-screen p-6 flex justify-left">
      <h3 class="mr-6">MODITTER</h3>
      <% if session[:oauth_token].present? %>
        <%= link_to "Timeline", @current_user, class: 'mr-4' %>
      <% else %>
        <%= link_to "Home", root_path, class: "mr-4 text-blue" %>
      <% end %>
      <%= link_to "About", '/about', class: "mr-4" %>
      <% if session[:oauth_token].present? %>
        <%= link_to "Logout", users_logout_path, method: :delete, class: 'mr-4' %>
      <% end %>
    </nav>

    <% if flash.any? %>
      <%= flash.each do |type, msg| %>
        <div class="<%= type %>">
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
